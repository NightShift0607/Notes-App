<div class="sidebar">
  <div class="user">
    <div class="user-detail">
      <img src="<%= user.profileImage %>" alt="Profile Photo" />
      <p><%= user.userName %></p>
      <i class="fa-solid fa-angle-down"></i>
    </div>
    <div class="user-option">
      <a href="/logout">Logout</a>
      <p id="profile">Profile</p>
    </div>
  </div>
  <form class="search-container">
    <input type="text" id="searchTerm" placeholder="Search..." />
  </form>
  <a href="/dashboard/new-note">
    <div
      class="new-note <%= isActiveRoute('/dashboard/new-note',currentRoute) %>"
    >
      New Note +
    </div>
  </a>
  <h2>Notes</h2>
  <div class="notes-container">
    <% notes.forEach(note => { %>
    <a
      href="/dashboard/note/<%= note._id %>"
      class="note <%= isActiveRoute(`/dashboard/note/${note._id}`,currentRoute) %>"
      ><%= note.title %></a
    >
    <% }) %>
  </div>
</div>
