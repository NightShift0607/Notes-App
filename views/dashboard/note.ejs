<style>
  @media only screen and (max-width: 600px) {
    .sidebar {
      display: none;
    }
  }
</style>
<div class="display-area newNote">
  <form
    action="/edit-note/<%= note._id %>?_method=PUT"
    method="post"
    class="note-form"
  >
    <input
      type="text"
      placeholder="Title"
      name="title"
      autofocus
      value="<%= note.title %>"
    />
    <textarea name="content" placeholder="Content">
<%= note.content %></textarea
    >
    <div class="note-btn">
      <p>Last Updated At: <%= note.updatedAt.toLocaleString() %></p>
      <button type="submit" class="btn">Update</button>
      <a href="/delete/<%= note._id %>">
        <div class="btn red">Delete</div>
      </a>
    </div>
  </form>
</div>
